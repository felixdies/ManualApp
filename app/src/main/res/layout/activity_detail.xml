<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fc3c59">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="13dp"
                    android:gravity="center"
                    android:text="←"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/detailItemName"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center"
                    android:lineSpacingExtra="32sp"
                    android:text="삼성 블루스카이 공기청정기"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:lineSpacingExtra="34sp"
                    android:gravity="center"
                    android:text="편집"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="107dp"
                    android:text="필터 수명"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRemainPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="124dp"
                    android:text="12"
                    android:textColor="#ffffff"
                    android:textSize="70sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="%"
                    android:textColor="#ffffff"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="0dp"
                    app:layout_constraintTop_toTopOf="@+id/tvRemainPercent"
                    app:layout_constraintStart_toEndOf="@+id/tvRemainPercent" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="262dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:text="잔여보증기간"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="326일 남음"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="262dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:text="필터교체주기"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="6개월"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="240dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="262dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:text="청소주기"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="1개월"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/supplies_title" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toTopOf="parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgSup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/supply1" />

                        <ImageView
                            android:id="@+id/imgSup2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/supply2" />

                        <ImageView
                            android:id="@+id/imgSup3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/supply3" />
                    </LinearLayout>
                </ScrollView>

            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/faq" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/service_center" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>