<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvHello"
        android:lineSpacingExtra="6sp"
        android:text="김미소님\n안녕하세요."
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <view
        android:id="@+id/vSearch"
        class="android.support.constraint.ConstraintLayout"
        id="@+id/view"
        android:background="#0c000000"
        android:layout_width="310dp"
        android:layout_height="44dp"
        android:layout_marginTop="128dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgSearch"
        android:src="@drawable/serach"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/vSearch"
        app:layout_constraintStart_toStartOf="@+id/vSearch" />

    <EditText
        android:id="@+id/tSearch"
        android:inputType="textPersonName"
        android:text="제품명, 모델명, 매뉴얼 검색"
        android:layout_width="170dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@+id/vSearch"
        app:layout_constraintStart_toStartOf="@+id/vSearch" />

    <ImageView
        android:id="@+id/imgBarcode"
        android:src="@drawable/bacode"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/vSearch"
        app:layout_constraintEnd_toEndOf="@+id/vSearch" />

</android.support.constraint.ConstraintLayout>